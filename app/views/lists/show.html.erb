<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)),
    url(<%= cl_image_path @list.photos.attached? ? cl_image_path(@list.photos.first.key) :
    image_path('https://specials-images.forbesimg.com/imageserve/1216239173/960x0.jpg?cropX1=0&cropX2=5000&cropY1=0&cropY2=3333'), crop: :fill %>)">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="container">
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: 'btn btn-primary mt-3' %>
</div>

<div class="container">
  <div class="row">
    <% @list.movies.each do |movie| %>
      <div class="card m-3" style="width: 18rem;">
      <%# <div class="col-12 col-md-6 col-lg-4"> %>
        <%= image_tag movie.poster_url, class: 'card-img-top' %>
        <div class="card-body">
          <h5 class="card-title"><%= movie.title %></h5>
          <p class="card-text"><%= movie.overview %></p>
        </div>
        <% movie.bookmarks.each do |bookmark| %>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">"<%= bookmark.comment %>"</li>
          </ul>
          <div class="card-body">
            <%= link_to "Delete Movie", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you really sure?", class: 'card-link' } %>
          </div>
        <% end %>
      <%# </div> %>
      </div>
    <% end %>
  </div>
  <%= link_to "Back", root_path, class: 'btn btn-secondary mt-3' %>
</div>

