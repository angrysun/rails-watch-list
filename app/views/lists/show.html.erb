<% @list.photos.each do |photo| %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path photo.key, crop: :fill %>')">
<% end %>
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="container">
  <%= link_to "Add a movie", new_list_bookmark_path(@list) %>

  <div class="container">
    <div class="row">
      <ul>
        <li>
        <% @list.movies.each do |movie| %>
          <%= movie.title %> -
        </li>
          <% movie.bookmarks.each do |bookmark| %>
            <%= bookmark.comment %> -
            <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you really sure?", class: 'btn btn-danger' } %>
            <% end %>
        <% end %>
      </ul>
    </div>
  </div>



  <%= link_to "Back", root_path %>
</div>
